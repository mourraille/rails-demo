<h1>Sign In</h1>

<%= form_with url:sign_in_path do |form| %>

<div class="mb-3" Style="margin-top:5%">
    <%= form.label :email %>
    <%= form.text_field :email , class: "form-control", placeholder: "john@example.com" %>
</div>

<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password ,  class:  "form-control",  placeholder: "Password" %>
</div>

<div class="mb-3">
    <%= form.submit "Sign In", class:"btn btn-dark"%>
</div>

<%end%>